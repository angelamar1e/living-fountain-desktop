<Page x:Class="Living_Fountain.Credits"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Living_Fountain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Credits">
    <Page.Resources>
        <DataTemplate x:Key="CheckBoxCellTemplate">
            <CheckBox Checked="CheckBox_Checked"/>
        </DataTemplate>
    </Page.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="500"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Credits" Width="196" HorizontalAlignment="Left" FontSize="40" FontWeight="Bold" Margin="10,10,0,455" Foreground="#2c61ec" Grid.RowSpan="2"/>
        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="dataGridContainer" Orientation="Vertical" Margin="0,50">
                <TextBlock x:Name="noRecords" Visibility="Hidden">No credits recorded. All orders are paid.</TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
