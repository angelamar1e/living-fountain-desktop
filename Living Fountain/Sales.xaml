<Page x:Class="Living_Fountain.Sales"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Living_Fountain"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1500"
      Title="Sales">

    <Page.Resources>
        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip" Value="{Binding (Validation.Errors)[0].ErrorContent}"/>
                    <Setter Property="Background" Value="LightCoral"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        
        <!--Page Title-->
        <StackPanel HorizontalAlignment="Stretch">
            <TextBlock>Sales</TextBlock>
        </StackPanel>
            
        <!--Add New Order section title-->
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" FontSize="30" FontWeight="Bold" Foreground="#2C61EC">Add New Order</TextBlock>
        
        <!--Add New Order subsection titles-->     
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock Margin="20 0 0 0">Customer</TextBlock>
            <TextBlock Margin="200 0 0 0">Order</TextBlock>
        </StackPanel>
        
        <!--Labels and fields for Add New Order-->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            
            <!--Labels-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Label Content="Block" HorizontalAlignment="Left" Margin="18,0,0,0" VerticalAlignment="Center" Padding="0"/>
                <Label Grid.Column="1" Content="Lot" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="0"/>
                <Label Grid.Column="2" Content="Phase" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="0"/>
                <Label Grid.Column="3" Content="Type" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="0"/>
                <Label Grid.Column="4" Content="Quantity" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="0"/>
                <Label Grid.Column="5" Content="Deliverer" HorizontalAlignment="Left" VerticalAlignment="Bottom" Padding="0" Margin="0,0,0,2"/>
                <Label Grid.Column="6" Content="Status" HorizontalAlignment="Left" VerticalAlignment="Bottom" Padding="0" Margin="0,0,0,2"/>
            </Grid>

            <!--Fields-->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                
                <!-- Block Field with Validation -->
                <TextBox Name="blockField" Grid.Column="1">
                    <TextBox.Text>
                        <Binding Path="Block" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <local:NotEmptyValidationRule />
                                <local:NumericValidationRule MinDigits="1" MaxDigits="2" />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <!-- Lot Field with Validation -->
                <TextBox Name="lotField" Grid.Column="2">
                    <TextBox.Text>
                        <Binding Path="Lot" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <local:NotEmptyValidationRule />
                                <local:NumericValidationRule MinDigits="1" MaxDigits="2" />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <!-- Phase Field with Validation -->
                <TextBox Name="phaseField">
                    <TextBox.Text>
                        <Binding Path="Phase" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <local:NotEmptyValidationRule />
                                <local:NumericValidationRule MinDigits="1" MaxDigits="2" />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <!-- Product Type ComboBox -->
                <ComboBox Grid.Column="3" Name="productTypeCombo"
                          DisplayMemberPath="product_desc"
                          SelectedValuePath="code"/>
                
                <!-- Quantity Field with Numeric Validation -->
                <TextBox Name="quantityField" Grid.Column="4">
                    <TextBox.Text>
                        <Binding Path="Quantity" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <local:NotEmptyValidationRule />
                                <local:NumericValidationRule MinDigits="1" MaxDigits="3" />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <!-- Deliverer ComboBox -->
                <ComboBox Grid.Column="5" Name="delivererCombo"
                          DisplayMemberPath="employee_name"
                          SelectedValuePath="id"/>

                <!-- Status ComboBox -->
                <ComboBox Grid.Column="6" Name="statusCombo"
                          DisplayMemberPath="status_desc"
                          SelectedValuePath="code"/>

                <!-- Submit Button -->
                <Button Grid.Column="7" Name="submitButton" Content="Submit" Click="SubmitButtonClick"/>
            </Grid>
        </Grid>
        
        <!--Table details-->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <!--Table title and date-->
            <StackPanel Orientation="Horizontal">
                <TextBlock Name="tableLabel" VerticalAlignment="Bottom" FontSize="20">Order Records •</TextBlock>
                <TextBlock x:Name="currentDate" VerticalAlignment="Bottom"></TextBlock>
            </StackPanel>
            <!--Date picker-->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center">Filter by date:</TextBlock>
                <DatePicker Name="datePicker" Width="120" Height="30" CalendarClosed="datePicker_CalendarClosed"></DatePicker>
            </StackPanel>
        </Grid>
        
        <!--textblock in case of no records found-->         
        <TextBlock Name="noRecords" Grid.Row="5" Visibility="Hidden">No order records found.</TextBlock>
        
        <!--Table-->
        <DataGrid x:Name="OrderRecords" Grid.Row="5" AutoGenerateColumns="False" HorizontalAlignment="Center" VerticalAlignment="Stretch" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Block" Binding="{Binding block}" />
                <DataGridTextColumn Header="Lot" Binding="{Binding lot}" />
                <DataGridTextColumn Header="Phase" Binding="{Binding phase}" />
                <DataGridTextColumn Header="Product" Binding="{Binding product_codeNavigation.product_desc}" />
                <DataGridTextColumn Header="Quantity" Binding="{Binding quantity}" />
                <DataGridTextColumn Header="Price" Binding="{Binding price}" />
                <DataGridTextColumn Header="Deliverer" Binding="{Binding deliverer.employee_name}" />
                <DataGridTextColumn Header="Status" Binding="{Binding statusNavigation.status_desc}"/>
                <DataGridTemplateColumn Header="Actions">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <!-- Edit button -->
                                <Button x:Name="editBtn" Content="Edit" Click="EditButtonClick" Margin="2" Tag="{Binding id}" />

                                <!-- Delete button -->
                                <Button x:Name="deleteBtn" Content="Delete" Click="DeleteButtonClick" Margin="2" Tag="{Binding id}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>


        <Border Grid.Column="1" Margin="50,50,38,50" CornerRadius="10">
            <StackPanel Margin="10">
                <!-- SALES & Add New Order Title -->
                <Label Content="SALES" HorizontalAlignment="Left" Margin="10,10,0,10" FontSize="40" FontWeight="Bold" Foreground="#2C61EC"/>
                <Label Content="Add New Order" HorizontalAlignment="Center" Margin="0,0,0,20" FontSize="30" FontWeight="Bold" Foreground="#2C61EC"/>

                <!-- Customer/Order Details & Submit Button -->
                <Border BorderBrush="Black" BorderThickness="1" Background="White" CornerRadius="10">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50*"/>
                                <ColumnDefinition Width="50*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Column="0" Content="Customer" FontSize="25" FontWeight="Bold" Foreground="#2C61EC"/>
                            <Label Grid.Column="1" Content="Order" FontSize="25" FontWeight="Bold" Foreground="#2C61EC"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Column="0" Content="Block" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                            <Label Grid.Column="1" Content="Lot" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                            <Label Grid.Column="2" Content="Phase" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                            <Label Grid.Column="3" Content="Type" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                            <Label Grid.Column="4" Content="Quantity" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                            <Label Grid.Column="5" Content="Deliverer" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="Black"/>

                            <TextBox Grid.Column="0" Grid.Row="1" Width="100" Height="30" Margin="5" BorderBrush="Black" BorderThickness="1"/>
                            <TextBox Grid.Column="1" Grid.Row="1" Width="100" Height="30" Margin="5" BorderBrush="Black" BorderThickness="1"/>
                            <TextBox Grid.Column="2" Grid.Row="1" Width="100" Height="30" Margin="5" BorderBrush="Black" BorderThickness="1"/>
                            <ComboBox Grid.Column="3" Grid.Row="1" Width="150" Height="30" Margin="5" BorderBrush="Black" BorderThickness="1">
                                <ComboBoxItem>Medium Gallon</ComboBoxItem>
                                <ComboBoxItem>Regular Gallon</ComboBoxItem>
                                <ComboBoxItem>Small Gallon</ComboBoxItem>
                                <ComboBoxItem>Extra Small Gallon</ComboBoxItem>
                            </ComboBox>
                            <TextBox Grid.Column="4" Grid.Row="1" Width="100" Height="30" Margin="5" BorderBrush="Black" BorderThickness="1"/>
                            <ComboBox Grid.Column="5" Grid.Row="1" Width="200" Height="30" Margin="5" BorderBrush="Black" BorderThickness="1">
                                <ComboBoxItem>Deliverer Name</ComboBoxItem>
                            </ComboBox>
                        </Grid>

                        <Button Content="Submit" FontSize="15" FontWeight="Bold" Margin="0,20,0,10" Width="100" Height="35" Background="#2C61EC" Foreground="White" BorderBrush="Transparent" BorderThickness="0"/>

                    </StackPanel>
                </Border>

                <Grid Margin="0,30,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Content="Order Records" FontSize="25" FontWeight="Bold" Foreground="#2C61EC" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Label Grid.Column="1" Content="Filter by date: " HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#2C61EC" FontSize="20" FontWeight="Bold" Margin="268,0,0,0"/>
                    <DatePicker Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="150"/>
                </Grid>

                <Border BorderBrush="Black" BorderThickness="1" Background="White" CornerRadius="10">
                    <StackPanel Margin="10">
                        <Label Content="Date" FontSize="25" FontWeight="Bold" Foreground="#2C61EC" HorizontalAlignment="Left"/>
                        <Label Content="Revenue" FontSize="25" FontWeight="Bold" Foreground="#2C61EC" HorizontalAlignment="Left"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60*"/>
                                <ColumnDefinition Width="10*"/>
                                <ColumnDefinition Width="10*"/>
                                <ColumnDefinition Width="10*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="100*"/>
                            </Grid.RowDefinitions>
                            <!-- Grid 0: Table -->
                            <Button Grid.Column="2" Content="Edit" FontSize="15" FontWeight="Bold" Width="100" Background="#2C61EC" Foreground="White" BorderBrush="Transparent" BorderThickness="0"/>
                            <Button Grid.Column="3" Content="Delete" FontSize="15" FontWeight="Bold" Width="100" Background="#2C61EC" Foreground="White" BorderBrush="Transparent" BorderThickness="0"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Border>
    </Grid>
</Page>
